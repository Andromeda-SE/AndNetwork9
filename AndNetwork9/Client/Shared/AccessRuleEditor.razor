<div class="modal fade" id="@Id" tabindex="-1">
    <div class="modal-dialog">
            <div class="modal-content">
                @if (_initialized)
                {
                    <div class="modal-header">
                        <h5 class="modal-title">Изменение правил доступа</h5>
                        <button class="btn-close" data-bs-dismiss="modal" type="button"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3 row">
                            <label class="col-form-label">Направления</label>
                            <div class="">
                                @foreach (KeyValuePair<Direction, bool> direction in DirectionAccess)
                                {
                                    <div class="form-check">
                                        <input @bind="DirectionAccess[direction.Key]" class="form-check-input" type="checkbox">
                                        <label class="form-check-label">
                                            @direction.Key.GetName()
                                        </label>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-form-label">Минимальный ранг</label>
                            <div class="">
                                <select @bind="MinRank" class="form-control form-select">
                                    @foreach (Rank rank in Enum.GetValues<Rank>().Where(x => x > Rank.None && x <= AuthStateProvider.CurrentMember.Rank))
                                    {
                                        <option value="@rank">@rank.GetRankName()</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-form-label">Отряд</label>
                            <div class="">
                                <select @bind="SelectedSquadId" class="form-control form-select">
                                    @* ReSharper disable once RedundantCast *@
                                    <option value="@(default(int?))">(нет)</option>
                                    @foreach (Squad squad in Squads)
                                    {
                                        <option value="@squad.Number">@squad.ToString()</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-form-label">Игроки</label>
                            <div class="d-grid table-responsive">
                                <table class="table table-sm">
                                    <tbody>
                                    @foreach (Member member in SelectedMembers)
                                    {
                                        <tr>
                                            <td>
                                                <a href="@member.GetLink()" target="_blank">@member.ToString()</a>
                                            </td>
                                            <td class="align-middle">
                                                <button class="btn btn-danger btn-sm" @onclick="e => SelectedMembers.Remove(member)" type="button">
                                                    <i class="bi bi-dash-lg"/>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                    </tbody>
                                    <tfoot>
                                    <tr>
                                        <td>
                                            <select @bind="SelectedMemberId" class="form-control form-control-sm form-select">
                                                <option value="@(default(int?))"></option>
                                                @foreach (Member member in Members.Except(SelectedMembers).OrderByDescending(x => x))
                                                {
                                                    <option value="@member.Id">@member.ToString()</option>
                                                }
                                            </select>
                                        </td>
                                        <td class="align-top">
                                            <button class="btn btn-sm btn-success mt-1" disabled="@(SelectedMember is null)" @onclick="AddMember" type="button">
                                                <i class="bi bi-plus-lg"/>
                                            </button>
                                        </td>
                                    </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" data-bs-dismiss="modal" @onclick="Cancel" type="button">Отмена</button>
                        <button class="btn btn-primary" data-bs-dismiss="modal" @onclick="Save" type="button">Сохранить</button>
                    </div>
                }
            </div>
        </div>
</div>
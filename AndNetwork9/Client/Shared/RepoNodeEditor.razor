<div class="fade modal show" id="loader" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Загрузить новую версию</h5>
                <button class="btn-close" data-bs-dismiss="modal" type="button"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3 row">
                    <label class="col-form-label col-sm-2">Описание</label>
                    <div class="col-sm-10">
                        <input @bind="Description" class="form-control" type="text">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-form-label col-sm-2">Уровень</label>
                    <div class="col-sm-10">
                        <select @bind="Level" class="form-control form-select">
                            @foreach (VersionLevel level in Enum.GetValues<VersionLevel>())
                            {
                                <option value="@level">@level.GetName()</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label class="col-form-label col-sm-2">Файл</label>
                    <div class="col-sm-10">
                        <InputFile class="form-control" OnChange="FileChanged"/>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal" type="button">Отмена</button>
                <button class="btn btn-primary" @onclick="Send" type="button">Загрузить</button>
            </div>
        </div>
    </div>
</div>
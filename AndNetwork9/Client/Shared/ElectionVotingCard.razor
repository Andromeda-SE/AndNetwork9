    <div class="card user-select-none">
        <div class="card-body">
            <h5 class="card-title">@ElectionVote.Direction.GetName()</h5>
            <h6 class="card-subtitle mb-2 @(AllowSend ? "text-success" : "text-danger fw-bolder")">
                Нераспределенные голоса: @(VotesRemaining)
            </h6>
            <ul class="list-group list-group-flush">
                @foreach ((int memberId, uint votes) in ElectionVote.Votes)
                {
                    <li class="list-group-item d-flex justify-content-between">
                        <span>@(memberId == 0 ? (MarkupString)"Против всех" : AllMembers.First(x => x.Id == memberId).GetHtml())</span>
                        <div class="d-flex justify-content-between" style="width: 100px">
                            <button type="button" class="btn badge rounded-pill bg-secondary" disabled="@(!AllowMinus(memberId))" @onclick="e => Remove(memberId, e)">
                                <i class="bi bi-dash"></i>
                            </button>
                            <strong>@(votes + Bulletin[memberId])</strong>
                            <button type="button" class="btn badge rounded-pill bg-secondary" disabled="@(!AllowPlus)" @onclick="e => Add(memberId, e)">
                                <i class="bi bi-plus"></i>
                            </button>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </div>
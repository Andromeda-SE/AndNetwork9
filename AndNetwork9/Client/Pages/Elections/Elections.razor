@page "/election"
@if (CurrentElections is not null)
{
    switch (CurrentElections.Stage)
    {
        case ElectionStage.Registration:
            <ElectionsRegistration CurrentElections="CurrentElections"/>
            break;
        case ElectionStage.Voting when CurrentElections.Votes.Any(x => x.VoteAllowed):
            <ElectionVoting CurrentElections="CurrentElections"/>
            break;
        case ElectionStage.Voting:
        case ElectionStage.Announcement:
        case ElectionStage.Ended:
            <ElectionsAnnouncement CurrentElections="CurrentElections"/>
            break;
        default:
            <ElectionsRegistration CurrentElections="CurrentElections"/>
            break;
    }
}
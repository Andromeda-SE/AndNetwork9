@if (Initialized)
{
    <BaseBodyWithAside>
        <Main>
            <small class="text-muted">
                Распределите все голоса между кандидатами и вариантом «Против всех».
                После распределния голосов нажмите кнопку «Отправить» в конце страницы.
                Помните, что вы не сможете переназначить голоса после отправки!
            </small>
            @foreach (CouncilElectionVote vote in CurrentElections.Votes)
            {
                <div class="mb-3">
                    <ElectionVotingCard AllMembers="AllMembers" Bulletin="Bulletins[vote.Direction]" ElectionVote="vote" ReadOnly="!vote.VoteAllowed" UpdateAllowSend="x => UpdateSendAllowed(vote.Direction, x)"/>
                </div>
            }
            <div class="d-flex">
                <button class="btn btn-primary" disabled="@(!SendAllowed)" @onclick="async _ => await Send()">Отправить</button>
            </div>

        </Main>
        <Aside>
            <div>
                <ElectionsAside Election="CurrentElections"/>
            </div>
        </Aside>
    </BaseBodyWithAside>
}
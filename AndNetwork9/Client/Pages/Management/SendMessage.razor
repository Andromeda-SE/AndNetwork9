@page "/management/message"
<FastMemberSelector Id="membersSelector" InitialMembers="SelectedMembers" MembersUpdated="UpdateMembersList"/>
<div class="mb-3 row">
    <label class="col-form-label col-sm-2">Получатели</label>
    <div class="col-sm-10 d-flex justify-content-between">
        <label class="form-label">
            @if (SelectedMembers.Count == 0)
            {
                <label>(нет)</label>
            }
            else if (SelectedMembers.Count == 1)
            {
                <label>@SelectedMembers.Single().ToString()</label>
            }
            else
            {
                <label>Игроков: @SelectedMembers.Count.ToString("D")</label>
            }
        </label>
        <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#membersSelector">Изменить список участников</button>
    </div>
</div>
<div class="mb-3 row">
    <div class="col-sm-12">
        <MarkdownEditor
            GetterFunc="() => Text"
            SetterFunc="x => Text = x">
        </MarkdownEditor>
    </div>
</div>
<div class="mb-3 row">
    <div class="col-sm-10">
    </div>
    <div class="col-sm-2 d-flex justify-content-end">
        <button class="btn btn-primary" disabled="@(!Validate())" @onclick="Send">Отправить</button>
    </div>
</div>
@page "/management/addaward"
<FastMemberSelector Id="membersSelector" InitialMembers="SelectedMembers" MembersUpdated="UpdateMembersList"/>

<div class="mb-3 row">
    <label class="col-form-label col-sm-2">Тип</label>
    <div class="col-sm-10">
        <select @bind="Type" class="form-control form-select">
            @foreach (AwardType awardType in AvailableTypes)
            {
                <option value="@awardType">@awardType.GetTypeName()</option>
            }
        </select>
    </div>
</div>
<div class="mb-3 row">
    <label class="col-form-label col-sm-2">Описание</label>
    <div class="col-sm-10">
        <input @bind="Description" class="form-control" type="text">
    </div>
</div>
<div class="mb-3 row">
    <label class="col-form-label col-sm-2">Участники</label>
    <div class="col-sm-10 d-flex justify-content-between">
        <label class="form-label">
            @if (SelectedMembers.Count == 0)
            {
                <label>(нет)</label>
            }
            else if (SelectedMembers.Count == 1)
            {
                <label>@SelectedMembers.Single().ToString()</label>
            }
            else
            {
                <label>Игроков: @SelectedMembers.Count.ToString("D")</label>
            }
        </label>
        <button class="btn btn-warning" data-bs-target="#membersSelector" data-bs-toggle="modal">Изменить список участников</button>
    </div>
</div>
<div class="mb-3 row">
    <div class="col-sm-12">
        <button class="btn btn-primary" disabled="@(!Validate())" @onclick="Create">Создать</button>
    </div>
</div>
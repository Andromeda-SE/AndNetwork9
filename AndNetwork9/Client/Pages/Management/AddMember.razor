@page "/management/addmember"
<div class="mb-3 row">
    <label class="col-form-label col-sm-2">Никнейм</label>
    <div class="col-sm-10">
        <input @bind="Model.Nickname" class="form-control" type="text">
    </div>
</div>
<div class="mb-3 row">
    <label class="col-form-label col-sm-2">Имя</label>
    <div class="col-sm-10">
        <input @bind="Model.RealName" class="form-control" type="text">
    </div>
</div>
<div class="mb-3 row">
    <label class="col-form-label col-sm-2">SteamID</label>
    <div class="col-sm-10">
        <input @bind="Model.SteamId" class="form-control" type="number">
    </div>
</div>
<div class="mb-3 row">
    <label class="col-form-label col-sm-2">DiscordID</label>
    <div class="col-sm-10">
        <input @bind="Model.DiscordId" class="form-control" type="text">
    </div>
</div>
<div class="mb-3 row">
    <label class="col-form-label col-sm-2">VkID</label>
    <div class="col-sm-10">
        <input @bind="Model.VkId" class="form-control" type="number">
    </div>
</div>
<div class="mb-3 row">
    <label class="col-form-label col-sm-2">Статус</label>
    <div class="col-sm-10">
        <select @bind="Model.Rank" class="form-control form-select">
            @foreach (Rank rank in Enum.GetValues<Rank>().Where(x => x < Rank.None))
            {
                @if (rank == Rank.Guest)
                {
                    <option selected value="@rank">@rank.GetRankName()</option>
                }
                else
                {
                    <option value="@rank">@rank.GetRankName()</option>
                }
            }
        </select>
    </div>
</div>
<div class="mb-3 row">
    <div class="col-sm-12">
        <button class="btn btn-primary" disabled="@(!Validate())" @onclick="Create">Создать</button>
    </div>
</div>